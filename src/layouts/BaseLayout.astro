---
import '../tailwind.css';
interface Props {
	title: string;
	theme?: string;
}

const { title, theme = "robodark" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | VPCI Robotics</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
</style>

<script is:inline>
	if (localStorage.getItem("theme") === null) {
        document.documentElement.setAttribute("data-theme", "robodark");
      } else
        document.documentElement.setAttribute(
          "data-theme",
          localStorage.getItem("theme")
        );
</script>

<script>
	import { themeChange } from 'theme-change';
	themeChange();
</script>